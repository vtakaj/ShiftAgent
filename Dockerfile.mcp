# ==== Build Stage ====
FROM python:3.11-slim AS builder

# Build arguments
ARG TARGETPLATFORM
ARG BUILDPLATFORM

# Install uv for fast dependency management
COPY --from=ghcr.io/astral-sh/uv:latest /uv /bin/uv
RUN chmod +x /bin/uv

# Set working directory
WORKDIR /app

# Copy dependency files first for better layer caching
COPY pyproject.toml uv.lock ./

# Install dependencies (production only, no dev dependencies)
RUN /bin/uv sync --frozen --no-dev --no-install-project

# ==== Runtime Stage ====
FROM python:3.11-slim AS runtime

# Build arguments
ARG TARGETPLATFORM

# Install minimal system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Set working directory
WORKDIR /app

# Copy virtual environment from builder stage
COPY --from=builder /app/.venv /app/.venv

# Add virtual environment to PATH
ENV PATH="/app/.venv/bin:$PATH"

# Copy application source code
COPY src/ ./src/

# Create non-root user for security
RUN useradd --create-home --shell /bin/bash --uid 1000 app \
    && chown -R app:app /app
USER app

# Set environment variables for MCP server
ENV PYTHONPATH=/app/src
ENV SHIFT_SCHEDULER_API_URL=http://host.docker.internal:8081
ENV LOG_LEVEL=INFO
ENV MCP_LOG_LEVEL=INFO

# Health check for MCP server (basic process check)
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD ps aux | grep "natural_shift_planner_mcp" | grep -v grep || exit 1

# Run MCP server in STDIO mode
CMD ["python", "-m", "natural_shift_planner_mcp.server"]
