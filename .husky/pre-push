#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ§ª Running pre-push checks..."

# Check if we should skip tests (for emergency pushes)
if [ "$SKIP_TESTS" = "true" ]; then
    echo "â­ï¸  Skipping tests (SKIP_TESTS=true)"
    exit 0
fi

# Run tests before pushing
echo "ğŸ”¬ Running test suite..."
if ! uv run pytest -v --tb=short; then
    echo ""
    echo "âŒ Tests failed! Please fix failing tests before pushing."
    echo ""
    echo "To skip tests in emergency cases, use:"
    echo "  SKIP_TESTS=true git push"
    echo ""
    exit 1
fi

echo "âœ… All tests passed! Ready to push."